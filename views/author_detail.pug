extends layout

block content

  h1 #{author.name}
  p #{author.birthdate_formatted} - #{author.deathdate_formatted}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
      each book in author_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p This author has no books.
