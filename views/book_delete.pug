extends layout 

block content 
  h1  #{title}: #{book.title}
  p Summary: #{book.summary}

  if (list_instances.length) 

    p #[strong Delete the following copies before attempting to delete the book]

    div(style='margin-left:20px;margin-top:20px')

      h4 Books

      dl
      each copy in list_instances
        dt
          a(href=copy.url) #{copy.book.title}
        dd #{copy.status}
  else
    p Do you really want to delete this book?
    form(method='POST' action='')
      .form-group 
        input#bookid(type='hidden', name='bookid', required='true', value=book._id)

        button.btn.btn-primary(type="submit") Delete